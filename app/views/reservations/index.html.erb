<%= "#{@store.store_name} の予約カレンダー" %>
<h1>※予約枠を作成してください。</h1>

<% today = Date.today %>
<% today_m = today.month %>
<% today_y = today.year %>
<% one_day = Date.new(today_y,today_m,1) %>
<% one_day_w = one_day.wday %>
<% start_day = one_day - one_day_w %>
<% x = 0 %>

<%# 配列に予約枠を割り当てる %>

<% array = Array.new(42) {Array.new(10)} %>

<% @reservations.each do |rsv| %>
  <% date_d = rsv.rsv_date - start_day %>
  <% n = 0 %>
  <% if 0 <= date_d && date_d <= 41 %>
    <% while array[date_d][n] != nil %>
      <% n += 1 %>
    <% end %>
    <% array[date_d][n] = rsv %>
  <% end %>
<% end %>


<h2>
  <%= "#{today_m} 月の予約枠" %>
</h2>

<% week_name = ["日","月","火","水","木","金","土"] %>
<div class = "weekday-box">
<% 7.times do |i| %>
  <div class = "weekday-name">
    <%= week_name[i] %> 
  </div>
<% end %>
</div>

<% k = 0 %>

<% 6.times do %>
  <div class = "week-box">
  <% 7.times do %>
    <div class = "day-box">
      <div class = "day-name">
        <% a_day = start_day + x %>
        <% m = a_day.month %>
        <% d = a_day.day %>
        <%= "#{m}/#{d}" %> 
        <% x += 1 %>
      </div>
      <div class = "day-content">
        <% 9.times do |n| %>
          <% if array[k][n] != nil %>
            <% a = array[k][n] %>
            <%= link_to "#{a.explain}:#{a.rsv_n}枠", store_reservation_path(@store.id, a.id), method: :get %>
          <% end %>
        <% end %>
      </div>
    </div>  
    <% k += 1 %>
  <% end %>
  </div>
<% end %>
<%  %>

<div>
<%= link_to "予約枠の新規登録", new_store_reservation_path, method: :get %>
</div>

<div>
<%= link_to "予約枠の一括新規登録", new_store_rsv_group_path, method: :get %>
</div>

<div>
<%= link_to "#{@store.store_name} 詳細に戻る", store_path(@store.id), method: :get %>
</div>
<div>
<%= link_to "店舗一覧に戻る", root_path, method: :get %>
</div>

<% @reservations.each do |rsv| # これは仮なので後で削除しよう %>
<div>
  <%= rsv.rsv_date %>
  <%= "　#{rsv.rsv_n}枠"  %>
</div>
<% end %>

